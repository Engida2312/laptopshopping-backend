<body>
    <nav>
        <div class="navigation_container">
            <div class="logo">
                 <h1>Ethio<span>shop</span></h1>
            </div>
            <div class="h_search_bar_container">
                <form action="">
                    <input type="text" placeholder="What are you looking for ?">
                    <button class="h_search_bar_btn"><i class="material-icons">search</i></button>
                </form>
            </div>
            <div class="sign_in_and_cart_container">
                <% if(username){%>
                    <form action="/signout" method="post">
                        <p style="color: aqua; display: inline;">welcome <%= username %></p>
                        <button style="margin-left: 1rem; color: white; background: none;border: none;" id="sign_in">Sign out</button>
                    </form>
                <%}else{%>
                    <a href="/signin" id="sign_in">Sign in</a>
                <%}%>
                <a href="" id="cart"><i class="material-icons">shopping_cart</i><span>Cart</span></a>
            </div>
        </div>
    </nav>